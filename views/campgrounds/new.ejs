<% include ../partials/header.ejs%>

<div class="container">
    <div class="row">
        <div class="page-header">
            <h2>Create a New Campground</h2>
        </div>
        <div class="form">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" placeholder="name" name="campground[name]">
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        <input class="form-control" type="number" name="campground[price]" min="0.01" step="0.01">
                    </div>
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input class="form-control" type="text" placeholder="image url" name="campground[img]">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" type="text" placeholder="description" name="campground[description]" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>

            <a class="pull-right" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs%>

